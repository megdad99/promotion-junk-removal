    <!-- Gemini API and Feature Logic -->
    <script>
        const GEMINI_MODEL = 'gemini-2.5-flash-preview-09-2025';

        // Utility function for robust API calls
        async function fetchWithExponentialBackoff(url, options, maxRetries = 5) {
            for (let attempt = 0; attempt < maxRetries; attempt++) {
                try {
                    const response = await fetch(url, options);
                    if (!response.ok) {
                        if (response.status === 429 && attempt < maxRetries - 1) {
                            // Retry logic for rate limiting
                            const delay = Math.pow(2, attempt) * 1000 + Math.random() * 1000;
                            console.warn(`Rate limit hit, retrying in ${delay / 1000}s...`);
                            await new Promise(resolve => setTimeout(resolve, delay));
                            continue; 
                        }
                        throw new Error(`API request failed with status: ${response.status}`);
                    }
                    return response;
                } catch (error) {
                    if (attempt === maxRetries - 1) {
                        throw error; 
                    }
                    const delay = Math.pow(2, attempt) * 1000 + Math.random() * 1000;
                    console.warn(`Fetch error: ${error.message}. Retrying in ${delay / 1000}s...`);
                    await new Promise(resolve => setTimeout(resolve, delay));
                }
            }
        }

        async function generateDetailedDescription() {
            const apiKey = ""; // API key is provided at runtime in this environment
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/${GEMINI_MODEL}:generateContent?key=${apiKey}`;

            const messageInput = document.getElementById('message');
            const loadingIndicator = document.getElementById('loadingIndicator');
            const errorMessage = document.getElementById('errorMessage');
            const button = document.getElementById('generateDescriptionBtn');

            const userDescription = messageInput.value.trim();
            if (userDescription === "") {
                errorMessage.textContent = 'Please enter a brief description first (e.g., "old furniture in basement").';
                errorMessage.classList.remove('hidden');
                return;
            }

            // Set UI state to loading
            button.disabled = true;
            button.textContent = 'Generating...';
            button.classList.remove('bg-gray-600');
            button.classList.add('bg-gray-800');
            loadingIndicator.classList.remove('hidden');
            errorMessage.classList.add('hidden');

            const systemPrompt = "You are an expert junk removal estimator. Your task is to take a brief, casual description of junk items and expand it into a detailed, itemized list suitable for generating a removal quote. The list MUST be categorized into headers like 'Large Furniture', 'Appliances', 'Debris', etc., and clearly formatted for easy reading. Do NOT invent items the user didn't mention, but categorize and structure the existing description professionally. If the user mentions a specific location (like 'garage'), include that context. The final output must be only the categorized list.";
            const userQuery = `Expand and categorize this junk description into a professional quote item list:\n\nOriginal Description: "${userDescription}"`;
            
            const payload = {
                contents: [{ parts: [{ text: userQuery }] }],
                systemInstruction: { parts: [{ text: systemPrompt }] },
            };

            try {
                const response = await fetchWithExponentialBackoff(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });

                const result = await response.json();
                const generatedText = result.candidates?.[0]?.content?.parts?.[0]?.text;

                if (generatedText) {
                    // Prepend the new text to the existing input for review
                    messageInput.value = `*** Detailed Estimate Suggestion (Powered by AI) ***\n${generatedText}\n\n--- Original Request ---\n${userDescription}`;
                    
                    // Give visual feedback
                    button.textContent = '‚ú® List Detailed!';
                    setTimeout(() => {
                        button.textContent = '‚ú® Auto-Detail Junk List';
                    }, 3000);
                } else {
                    errorMessage.textContent = 'Error: Could not generate description. Please try again.';
                    errorMessage.classList.remove('hidden');
                }

            } catch (error) {
                console.error('Gemini API Error:', error);
                errorMessage.textContent = 'API connection error. Please call us directly for a quote.';
                errorMessage.classList.remove('hidden');
            } finally {
                // Reset UI state
                button.disabled = false;
                button.classList.add('bg-gray-600');
                button.classList.remove('bg-gray-800');
                loadingIndicator.classList.add('hidden');
                if (button.textContent === 'Generating...') {
                     button.textContent = '‚ú® Auto-Detail Junk List';
                }
            }
        }

        // Function alias for onclick
        function handleGeminiFeature() {
            generateDetailedDescription();
        }
    </script>
